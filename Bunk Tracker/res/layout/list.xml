<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/firstLetter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/web_hi_res_white"
        android:enabled="true"
        android:paddingTop="6dp"
        android:text="M"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/firstLetter"
        android:text="subject"
        android:textColorHint="@android:color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subject"
        android:layout_centerHorizontal="true"
        android:text="id"
        android:textColorHint="@android:color/black"
        android:textSize="25dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/_id"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/textView7"
        android:text="100%"
        android:textColorHint="@android:color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/percent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="54dp"
        android:text=">"
        android:textColorHint="@android:color/black"
        android:textSize="25dp" />
</RelativeLayout>
